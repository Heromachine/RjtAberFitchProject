<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.MainActivity"
    android:background="#ffffff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1ac2dc"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f9f4dd">

            <ImageView
                android:id="@+id/iv_promotion"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_top_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textAlignment="center"

/>

            <TextView
                android:id="@+id/tv_promo_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="11dp"
                android:textAlignment="center"
 />

            <TextView
                android:id="@+id/tv_bottom_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="13dp"
                android:textAlignment="center"
                android:padding="10dp"
 />



            <Button
                android:id="@+id/btn_content1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Button"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_button_bg"


 />

            <Button
                android:id="@+id/btn_content2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="60dp"
                android:text="Button"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/my_button_bg"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>